<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<EditText android:text="From : Ahmed" android:id="@+id/TextView01"
		android:layout_weight="0.20"
		android:lines="2" android:layout_height="0dip"
		android:focusable="False" android:layout_width="fill_parent">
		</EditText>
	<EditText android:text="Subject : Test" android:id="@+id/TextView02"
		android:layout_weight="0.20"
		android:focusable="False"
		android:lines="2" android:layout_width="fill_parent"
		android:layout_height="0dip"></EditText>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_weight="0.40"
	android:layout_width="fill_parent" android:layout_height="0dip">
	</LinearLayout>
	<Button android:text="Play" android:id="@+id/Button01"
		android:layout_weight="0.20"
		android:layout_height="0dip"
		android:onClick="play"
		android:layout_width="fill_parent"></Button>
</LinearLayout>
