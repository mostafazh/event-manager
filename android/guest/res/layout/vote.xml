<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ScrollView01" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:scrollbars="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/vote0" android:orientation="vertical"
			android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Favourite Song"
				android:textSize="10pt" />
			<Spinner android:layout_height="wrap_content" android:prompt="@string/favouriteSong"
				android:layout_width="fill_parent" android:entries="@array/votes0" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Rate the Event"
				android:textSize="10pt" />
			<RatingBar android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:numStars="5"
				android:stepSize="1.0" />
			<Button android:layout_height="wrap_content" android:text="Vote"
				android:onClick="vote" android:layout_width="fill_parent" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/vote1" android:orientation="vertical"
			android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Favourite Place"
				android:textSize="10pt" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Rate the Event"
				android:textSize="10pt" />
			<RatingBar android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:numStars="5"
				android:stepSize="1.0" />
			<Button android:layout_height="wrap_content" android:text="Vote"
				android:onClick="vote" android:layout_width="fill_parent" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/vote2" android:orientation="vertical"
			android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Best Performer"
				android:textSize="10pt" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Rate the Event"
				android:textSize="10pt" />
			<RatingBar android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:numStars="5"
				android:stepSize="1.0" />
			<Button android:layout_height="wrap_content" android:text="Vote"
				android:onClick="vote" android:layout_width="fill_parent" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/vote3" android:orientation="vertical"
			android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Vote 1"
				android:textSize="10pt" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Rate the Event"
				android:textSize="10pt" />
			<RatingBar android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:numStars="5"
				android:stepSize="1.0" />
			<Button android:layout_height="wrap_content" android:text="Vote"
				android:enabled="false" android:onClick="vote" android:layout_width="fill_parent" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>
