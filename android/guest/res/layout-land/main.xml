<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:layout_weight=".5">
		<Button android:id="@+id/searchButton" android:text="Search"
			android:layout_weight=".33" android:layout_width="0dip"
			android:layout_height="fill_parent" android:onClick="searchButtonClick" />
		<Button android:id="@+id/mapsButton" android:text="Maps"
			android:layout_weight=".33" android:layout_width="0dip"
			android:layout_height="fill_parent" android:onClick="mapsButtonClick" />
		<Button android:id="@+id/feedbackButton" android:text="Feedback"
			android:layout_weight=".33" android:layout_width="0dip"
			android:layout_height="fill_parent" android:onClick="feedbackButtonClick" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:layout_weight=".5">
		<Button android:id="@+id/votesButton" android:text="Votes"
			android:layout_weight=".5" android:layout_width="0dip"
			android:layout_height="fill_parent" android:onClick="votesButtonClick" />
		<Button android:text="Search" android:layout_weight=".5"
			android:layout_width="0dip" android:layout_height="fill_parent"
			android:enabled="false" android:visibility="invisible"
			android:onClick="mapsButtonClick" />
		<Button android:id="@+id/layarButton" android:text="Layar"
			android:layout_weight=".5" android:layout_width="0dip"
			android:layout_height="fill_parent" android:onClick="layarButtonClick" />
	</LinearLayout>
</LinearLayout>
