<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

 
	<EditText android:id="@+id/EditText01" android:layout_width="fill_parent"
		android:hint="username" android:layout_height="wrap_content"></EditText>

	<EditText android:id="@+id/EditText02" android:layout_width="fill_parent"
		android:hint="password" android:layout_height="wrap_content"
		android:inputType="textPassword"></EditText>

	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:onClick="login"
		android:id="@+id/Button01" android:text="Login"></Button>

</LinearLayout>
